extends includes/layout.pug
include includes/charts-less.pug
block content
  div(class='panel panel-default')
    div(class='panel-body')
      div(class='panel-body')
        each applicant in applicants
          div(class='card')
            div(class='card-body')
              div
                h3 #{applicant.applicant_name} - #{applicant.percent}%
              div(class='card-body')
                div(class='row')
                  each profile in applicant.profiles
                    +gen-chart(profile.percent, profile.name, profile.metrics)
                  div
                    button(class='btn btn-primary btn-lg'
                      type='button'
                      data-toggle='modal'
                      data-target='#applicant'+applicant.applicantId) Detalhes
          include includes/modal-details.pug
          br